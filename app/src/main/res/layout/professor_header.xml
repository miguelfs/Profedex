<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/walter_white"
            android:id="@+id/teacher_name_text_view"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_text"
            android:layout_below="@+id/teacher_name_text_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:id="@+id/professor_picture"
                android:scaleHeight="40%"
                android:scaleWidth="40%"
                android:src="@drawable/walter_1"
                android:layout_below="@+id/teacher_name_text_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignWithParentIfMissing="false"
                android:scaleType="fitStart"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lorem_short"
                android:id="@+id/description_teacher_text_view"
                android:gravity="center"
                android:layout_alignTop="@+id/professor_picture"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/professor_picture"
                android:layout_toEndOf="@+id/professor_picture" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rating_layout"
            android:gravity="center_horizontal"
            android:layout_below="@+id/image_text"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <!--<com.partiufast.profedex.views.RatingView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view"
                android:gravity="center_horizontal" />-->
        </LinearLayout>
    </RelativeLayout>